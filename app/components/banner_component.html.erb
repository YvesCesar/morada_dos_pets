<div class="bannerContent <%= @image_reference %> relative font-sans h-[400pt]">
    <div class="min-h-[350px] z-50 h-full max-w-6xl mx-auto flex flex-col justify-center items-center text-center text-white p-6">
        <div class="flex-grow"></div>
        <h2 class="text-4xl w-full font-bold text-left"><%= @title.html_safe %></h2>
        <% if @description %>
            <h3 class="w-full text-xl font-medium text-left"><%= @description.html_safe %></h3>
        <% end %>
        <div class="flex-grow"></div>
        <% if @button_title %>
            <button class="mb-12 px-6 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-background-brown rounded-[6px] hover:bg-opacity-90 focus:outline-none focus:ring focus:ring-background-brown focus:ring-opacity-80">
                <%= @button_title %>
            </button>
        <% end %>
    </div>
</div>